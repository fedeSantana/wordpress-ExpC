{
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "env": {
        "browser": true
    },
    "rules": {
        "react/jsx-filename-extension": "off",
        "no-console": "off",
        "react/no-unknown-property": [
            2,
            {
                "ignore": ["class"]
            }
        ]
    },
    "settings": {
        "react": {
            "createClass": "createElement", // Regex for Component Factory to use,
            // default to "createReactClass"
            "pragma": "createElement" // Pragma to use, default to "React"
        }
    }
}